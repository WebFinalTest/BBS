<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbs.repository.IUserRepository">
    <select id="findAll" resultType="User">
        select * from user
    </select>
    
    <select id="findById" resultType="User" parameterType="long">
        select * from user where userId = #{id}
    </select>

    <insert id="save" parameterType="User">
        insert into user(userName,email,password,type,userId)
        values (#{userName},#{email},#{password},#{type},#{userId})
    </insert>
    
    <update id="update" parameterType="User">
        update user set userName = #{userName},email = #{email},password = #{password},type = #{type} where userId = #{userId}
    </update>

    <delete id="deleteById" parameterType="long">
        delete from user where userId = #{id}
    </delete>
</mapper>